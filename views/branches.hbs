{{!-- Create a Branches table --}}

<div class="container">

    <div class="row border rounded  p-3 shadow-sm table-div">
        <h2 class=" page-name mt-3 mb-3 ">Branches</h2>
        <table class="table" id="branches-table">

            {{!-- Header section --}}
            <thead>
                <tr>
                    {{#each data.[0]}}
                    <th>
                        {{@key}}
                    </th>
                    {{/each}}
                    <th></th>
                </tr>
            </thead>

            {{!-- Body section --}}
            <tbody>
                {{#each data}}
                <tr data-value={{this.branchID}}>
                    <td>{{this.branchID}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.address}}</td>
                    <td>{{this.phone}}</td>
                    <td><button class="btn btn-outline-secondary btn-sm"
                            onclick="deleteBranch({{this.branchID}})">Delete</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <script src="./js/delete_branch.js"></script>


    {{!-- Form to add a record to the table --}}
    <div class="row">

        <div class="col-6">
            <div
                class="container border rounded py-2 px-4 mt-2 mb-3 shadow-sm">
                <h4 class="pt-3 pb-2 form-name">Add a Branch:</h4>

                <form id="add-branch-form-ajax">

                    <div class="form-group">
                        <label for="input-name">Branch Name: </label>
                        <input type="text" class="form-control"
                            name="input-name" id="input-name">
                    </div>

                    <div class="form-group">
                        <label for="input-addresss">Address: </label>
                        <input type="text" class="form-control"
                            name="input-address" id="input-address">
                    </div>

                    <div class="form-group">
                        <label for="input-phone">Phone: </label>
                        <input type="text" class="form-control"
                            name="input-phone" id="input-phone">
                    </div>

                    <div class="form-group text-center">
                        <input type="submit"
                            class="btn btn-primary my-4 px-5 mx-auto">
                    </div>

                </form>
            </div>
        </div>
        <div class="col-6"></div>
    </div>
</div>
{{!-- Embed our javascript to handle the DOM manipulation and AJAX request
--}}
<script src="./js/add_branch.js"></script>