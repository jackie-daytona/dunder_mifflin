{{!-- Create a departments table --}}
<div class="container">

    <div class="row border rounded  p-3 shadow-sm table-div">
        <h2 class=" page-name mt-3 mb-3 ">Departments</h2>
        <table class="table" id="departments-table">

            {{!-- Header section --}}
            <thead>
                <tr>
                    {{#each data.[0]}}
                    <th>
                        {{@key}}
                    </th>
                    {{/each}}
                </tr>
            </thead>

            {{!-- Body section --}}
            <tbody>
                {{#each data}}
                <tr data-value={{this.departmentID}}>
                    <td>{{this.departmentID}}</td>
                    <td>{{this.name}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    {{!-- Form to add a record to the table --}}
    <div class="row">
        <div class="col-6">
            <div
                class="container border rounded py-2 px-4 mt-2 mb-3 shadow-sm">

                <h4 class="pt-3 pb-2 form-name">Add a Department:</h4>

                <form id="add-department-form-ajax">
                    <div class="form-group">
                        <label for="input-name">Department Name: </label>
                        <input type="text" name="input-name"
                            class="form-control" id="input-name">
                    </div>

                    <div class="form-group text-center">
                        <input type="submit"
                            class="btn btn-primary my-4 px-5 mx-auto">
                    </div>
                </form>
            </div>
        </div>
        <div class="col-6"></div>
    </div>
</div>

